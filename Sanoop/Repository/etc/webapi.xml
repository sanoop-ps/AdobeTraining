<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/companyDetailsById/:id" method="GET">
        <service class="Sanoop\Repository\Api\CompanyDetailsRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/EmployeesById/:id" method="GET">
        <service class="Sanoop\Repository\Api\EmployeesRepositoryInterface"
                 method="getById"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
